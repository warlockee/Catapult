# Catapult Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=registry
POSTGRES_USER=registry
POSTGRES_PASSWORD=change_this_secure_password_in_production

# =============================================================================
# Application Configuration
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=info
DEBUG=false

# =============================================================================
# Security Configuration
# =============================================================================
# Salt for API key hashing - MUST be changed in production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY_SALT=demo_salt_change_in_production_use_secure_random_value

# CORS Origins (comma-separated, no spaces)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost

# =============================================================================
# Storage Configuration
# =============================================================================
# Root directory for all storage (defaults to ./storage if not set)
STORAGE_ROOT=./storage

# Configurable external mount paths (override for production)
MODELS_PATH=./storage/models
WORKSPACE_PATH=./storage/workspace

# Derived paths (configured in docker-compose, usually don't need changing)
CEPH_HOST_PATH=${STORAGE_ROOT}
CEPH_CONTAINER_PATH=/data/ceph
ARTIFACT_HOST_PATH=${STORAGE_ROOT}/artifacts
DOCKER_LOGS_HOST_PATH=${STORAGE_ROOT}/docker_logs
DOCKER_JOBS_HOST_PATH=${STORAGE_ROOT}/dockerbuild_jobs
SNAPSHOTS_HOST_PATH=${STORAGE_ROOT}/snapshots
MODELS_HOST_PATH=${STORAGE_ROOT}/models

# Subdirectory for storing models (default: images)
MODEL_STORAGE_DIR=images

# Maximum upload size in bytes (default: 1GB)
MAX_UPLOAD_SIZE=1073741824

# =============================================================================
# Network Configuration
# =============================================================================
# HTTP port for nginx
HTTP_PORT=8080

# HTTPS port for nginx (if using SSL)
HTTPS_PORT=8443

# API URL for frontend
VITE_API_URL=http://localhost/api

# =============================================================================
# Demo Account / Testing
# =============================================================================
# For demo purposes, you can create an admin API key after deployment:
# docker-compose exec backend python scripts/create_api_key.py --name "demo-admin"
#
# Then store it here for reference (not used by the application):
# DEMO_API_KEY=your_generated_api_key_here
